<h2> Add a New Trip</h2>

<form id ="formnew" action="/trips/new" method="post" enctype="multipart/form-data">
  <label for="trip-country-input"> Country </label>
  <input  id="trip-country-input" type="text" name="tripCountry" placeholder="" required>
    <br>
  <label for="trip-city-input"> City </label>
  <input  id="trip-city-input" type="text" name="tripCity" placeholder="" required>
    <br>
  <label for="trip-year-input"> Year </label>
  <input  id="trip-year-input" type="number" name="tripYear" placeholder=""required>
    <br>
  <label for="trip-days-input"> For how long:  </label>
  <input  id="trip-days-input" type="text" name="tripDays" placeholder="" required>
    <br>
  <label for="trip-something-input"> This trip I'll remember because... </label>
  <textarea id="trip-something-input" name="tripSomething" placeholder="" required></textarea>
    <br>
  <label for="trip-desc-input"> Description </label>
  <textarea id="trip-desc-input" name="tripDescription" placeholder="" required></textarea>
    <br>
  <label for="trip-thingsSeen-input"> Things seen </label>
  <textarea id="trip-thingsSeen-input" name="thingsSeen" placeholder=""></textarea>
    <br>

  <label for="trip-photo-input"> Upload Photo </label>
  <input id="trip-photo-input" type="file" name="tripPhoto" multiple="" value="">
    <br>
  <button> Save Trip </button>
</form>
